public class Jan16 { 
  public class makeBoard(int rows, int col) { 
    int[][] answer = new int[rows][col]; 
    for (int r = 0; r < rows; r++) { 
      for (int c = 0; c < col; c++) { 
        if (r == 0 || r == rows - 1 || c == 0 || c == col - 1) { 
          answer[r][c] = 0; 
        } else { 
          answer[r][c] = 1; 
        } 
      } 
    } 
    return answer;
  }
}